<Window x:Class="_04._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="FirstNumberTextBox" Width="200" Margin="5" ToolTip="Enter first number"/>
            <TextBox Name="SecondNumberTextBox" Width="200" Margin="5" ToolTip="Enter second number"/>
            <TextBox Name="OperationTextBox" Width="200" Margin="5" ToolTip="Enter operation (+, -, *, /)"/>
            <Button Name="StartProcessButton" Content="Start Process" Width="200" Margin="5" Click="StartProcessButton_Click"/>
            <TextBlock Name="ResultTextBlock" HorizontalAlignment="Center" Margin="5" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
