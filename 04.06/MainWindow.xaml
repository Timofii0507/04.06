<Window x:Class="_04._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="StartProcessButton" Content="Start Process" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Margin="10" Click="StartProcessButton_Click"/>
        <Button Name="WaitForExitButton" Content="Wait for Exit" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Margin="10" Click="WaitForExitButton_Click" IsEnabled="False"/>
        <Button Name="KillProcessButton" Content="Kill Process" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="150" Margin="10" Click="KillProcessButton_Click" IsEnabled="False"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,30" FontSize="16"/>
    </Grid>
</Window>
