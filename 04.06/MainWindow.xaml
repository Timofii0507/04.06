<Window x:Class="_04._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="FilePathTextBox" Width="300" Margin="5" ToolTip="Enter file path"/>
            <TextBox Name="SearchWordTextBox" Width="300" Margin="5" ToolTip="Enter search word"/>
            <Button Name="StartProcessButton" Content="Start Process" Width="300" Margin="5" Click="StartProcessButton_Click"/>
            <TextBlock Name="ResultTextBlock" HorizontalAlignment="Center" Margin="5" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
